<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"

    android:layout_height="310dp">


    <com.example.jb.test4.widgets.CustomTextView
        android:id="@+id/realtime_tm_tv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="60sp"
         />

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/realtime_tm_tv"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/skycon_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/location_tv"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/updateTime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/reatime_aqi_iv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/realtime_aqi_skull"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/reatime_aqi_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/reatime_aqi_iv"
            />

        <View
            android:id="@+id/line_middle"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/reatime_rainfall_iv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/minute_rain_fall_normal"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/line_middle"
            />
        <TextView
            android:id="@+id/reatime_rainfall_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/reatime_rainfall_iv"
            />
    </RelativeLayout>


</RelativeLayout>
