<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cityitem_bg"
    android:layout_margin="5dp"
    android:id="@+id/cityItem_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        >
        <ImageView
            android:id="@+id/cityItem_delete_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/btn_inline_delete_normal_light"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/cityItem_street_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ff666666"
            android:text="金环西路"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityItem_delete_iv"
            />

        <ImageView
            android:id="@+id/cityItem_location_im"
            android:layout_width="13dp"
            android:layout_height="17dp"
            android:background="@drawable/icon_location"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/cityItem_street_tv"
            />

        <TextView
            android:id="@+id/cityItem_districtNcty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff6a6a6a"
            android:text="金平区，汕头"
            android:layout_toRightOf="@id/cityItem_delete_iv"
            android:layout_below="@+id/cityItem_street_tv"
            android:layout_marginTop="5dp"

            />

        <ImageView
            android:id="@+id/cityItem_handle_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/drag_handle"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/cityItem_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/cityItem_icon_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_cloudy"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                />


            <com.example.jb.test4.widgets.CustomTextView
                android:id="@+id/cityItem_temperture_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="#ff666666"
                android:text="31℃"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/cityItem_line"
        android:layout_width="330dp"
        android:layout_height="1px"
        android:background="#ffbababa"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:id="@+id/cityItem_bottom"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/cityItem_aqi_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#ff6a6a6a"
            android:text="空气优"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ff6a6a6a"
            />
        <TextView
            android:id="@+id/cityItem_humidity_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#ff6a6a6a"
            android:text="湿度10%"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ff6a6a6a"
            />
        <TextView
            android:id="@+id/cityItem_windLevel_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#ff6a6a6a"
            android:text="南风2级"
            />
        <TextView
            android:id="@+id/cityItem_maxNmin_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#ff6a6a6a"
            android:text="33/25℃"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>

</LinearLayout>